                        // Extract the index and introContentId from the id attribute
                        const index = this.id.split('_')[1];
                        const introContentId = this.id.split('_')[3];
                        fetchGalleryItem(index, introContentId);
                    });
                });
            });
        
            function goToIntroPage(arg) {
